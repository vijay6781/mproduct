import React from 'react';
import PropTypes from 'prop-types';

const UseBotton = ({ text, onClick }) => {
  return (
    <button
      className="py-2 px-4 bg-gradient-to-r from-red-500 via-green-500 to-blue-500 text-white font-bold rounded"
      onClick={onClick}
    >
      {text}
    </button>
  );
};

UseBotton.propTypes = {
  text: PropTypes.string.isRequired,
  onClick: PropTypes.func, // Add prop type for onClick function
};

export default UseBotton;
